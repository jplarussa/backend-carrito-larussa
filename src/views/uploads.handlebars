<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Uploads</title>
    <link rel="stylesheet" href="/css/products.css">
</head>

<div class="container mt-3 w-50">
    <h3 class="text-center py-5 text-primary">Uploads</h3>
    <br>
    <div class="d-flex justify-content-center mb-3  ps-4">
        <button class="btn btn-primary mb-2" data-bs-target="#modalUploadsRequiredDocuments" data-bs-toggle="modal"
            href="#modalUploadsRequiredDocuments"> Upload Required Documents for Premium</button>
    </div>
    <br>
    <div class="d-flex justify-content-center mb-3  ps-4">
        <button class="btn btn-primary mb-2" data-bs-target="#modalUploadFiles" data-bs-toggle="modal"
            href="#modalUploadFiles"> Upload Files</button>
    </div>
    <br>
    <ul>
        {{#each uploads}}
        <div class="accordion m-2" id="accordionPanelsStayOpen{{name}}">
            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-h{{name}}">
                    <button class="accordion-button collapsed btn" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-{{name}}" aria-expanded="true"
                        aria-controls="panelsStayOpen-{{name}}">
                        <strong>Filename: {{name}}</strong>
                    </button>
                </h2>
                <div id="panelsStayOpen-{{name}}" class="accordion-collapse collapse"
                    aria-labelledby="panelsStayOpen-h{{name}}">
                    <div class="accordion-body">
                        <strong>URL: <a href="" class="text-primary">{{name}}</a></strong><br>
                        Reference: {{reference}}<br>
                        Status: <code>{{status}}</code><br>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </ul>
</div>

<!-- Modal Upload Required Documents for premium -->
<div class="modal fade" id="modalUploadsRequiredDocuments" tabindex="-1"
    aria-labelledby="modalUploadsRequiredDocumentsLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-primary" id="modalUploadsRequiredDocumentsLabel">File Upload</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form action="/api/users/{{user.email}}/documents" method="POST" enctype="multipart/form-data">
                    <label class="fw-bold mb-2" for="file">Select a document file:</label>
                    <input type="file" class="form-control mb-2" name="documents">
                    <input type="radio" id="reference1" name="reference" value="Identification">
                    <label for="reference1">Identification</label><br>
                    <input type="radio" id="reference2" name="reference" value="Proof of address">
                    <label for="reference2">Proof of address</label><br>
                    <input type="radio" id="reference3" name="reference" value="Statement of Account">
                    <label for="reference3">Statement of Account</label><br>
                    <br>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeAdd">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Upload for files -->
<div class="modal fade" id="modalUploadFiles" tabindex="-1" aria-labelledby="modalUploadFilesLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-primary" id="modalUploadFilesLabel">File Upload</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <!-- 'profiles' -->
                <form action="/api/users/{{user.email}}/documents" method="POST" enctype="multipart/form-data">
                    <p class="fw-bold">Upload Profile Images:</p>
                    <input type="file" class="form-control mb-2" name="profiles" multiple>
                    <button type="submit" class="btn btn-primary">Upload Profiles</button>
                </form>
                <br>

                <!-- 'products' -->
                <form action="/api/users/{{user.email}}/documents" method="POST" enctype="multipart/form-data">
                    <p class="fw-bold">Upload Product Images:</p>
                    <input type="file" class="form-control mb-2" name="products" multiple>
                    <button type="submit" class="btn btn-primary">Upload Products</button>
                </form>
                <br>

                <!-- 'documents' -->
                <form action="/api/users/{{user.email}}/documents" method="POST" enctype="multipart/form-data">
                    <p class="fw-bold">Upload Documents:</p>
                    <input type="file" class="form-control mb-2" name="documents" multiple>
                    <button type="submit" class="btn btn-primary">Upload Documents</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="closeAdd">Close</button>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>